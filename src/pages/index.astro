---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Timeline from "../components/Timeline.astro";
import Projects from "../components/Projects.astro";
import Stack from "../components/Stack.astro";
import Footer from "../components/Footer.astro";
import { Image, Picture } from "@astrojs/image/components";
import Blog from "../components/Blog.astro";
---

<Layout title="Harsimran">
  <Navbar />
  <div class="relative h-screen w-100" id="home-section">
    <main
      class="h-full md:3/4 lg:h-3/4 flex items-center justify-center flex-col hero-main px-2"
    >
      <img
        src="/profile.png"
        class="w-52 object-cover h-52 object-top mb-6 rounded-full bg-green-100"
        alt="Hero Image"
        width="100%"
        height="100%"
      />
      <div class="mb-2">
        <p class="text-center hero-intro font-bold text-xl title">
          Hi, my name is
        </p>
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold">
          Harsimran Singh Barki
        </h1>
      </div>

      <p class="mt-6 text-md md:text-lg lg:text-lg max-w-7xl text-center">
        I am a full stack developer with expertise in both front-end and
        back-end web development, particularly in technologies such as <u
          class="text-green-800"
          class="font-semibold"
        >
          NextJS, React, and Firebase</u
        >. My skills also include HTML, CSS, and JavaScript. View my portfolio
        to see my recent work and capabilities as a full stack developer.
      </p>
      <a href="#contact-section">
        <button
          class="shadow-md px-3 py-2 md:px-3 md:py-2 lg:py-3 lg:px-4 w-52 rounded-md mt-12 text-lg md:text-lg"
          >Contact Me</button
        >
      </a>
    </main>
    <Timeline />
    <Projects />
    <Stack />
    <Blog />
    <Footer />
  </div>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  .hero-intro {
    color: #00a688;
  }
  main {
    background-color: #f9f7f1;
  }

  .title {
    color: #034f4d;
  }

  h1 {
    color: #034f4d;
  }
  button {
    background: #1fe7c3;
    position: relative;
  }

  .inter {
    font-family: "Inter";
  }
</style>
