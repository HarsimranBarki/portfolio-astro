---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Timeline from "../components/Timeline.astro";
import Projects from "../components/Projects.astro";
import Stack from "../components/Stack.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Harsimran">
  <Navbar />
  <div class="relative h-screen w-100" id="home-section">
    <main
      class="h-3/5 md:3/4 lg:h-3/4 flex items-center justify-center flex-col hero-main px-2"
    >
      <img
        src="/profile.png"
        class="w-52 object-cover h-52 object-top mb-6 rounded-full bg-green-100"
        alt="Hero Image"
      />
      <div class="mb-2">
        <p class="text-center hero-intro font-bold text-xl">Hi, my name is</p>
        <h1 class="text-3xl md:text-5xl lg:text-7xl font-bold">
          Harsimran Singh
        </h1>
      </div>

      <p class="mt-6 text-md md:text-xl lg:text-xl max-w-7xl text-center">
        I am a full stack developer with expertise in both front-end and
        back-end web development, particularly in technologies such as <u
          class="text-green-800"
          class="font-semibold"
        >
          NextJS, React, and Firebase</u
        >. My skills also include HTML, CSS, and JavaScript. View my portfolio
        to see my recent work and capabilities as a full stack developer.
      </p>
      <a href="#contact-section">
        <button
          class="shadow-md px-3 py-2 md:px-3 md:py-2 lg:py-3 lg:px-4 w-52 rounded-md mt-12 text-lg md:text-xl"
          >Contact Me</button
        >
      </a>
    </main>
    <Timeline />
    <Projects />
    <Stack />
    <Footer />
  </div>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  .hero-intro {
    color: #00a688;
  }
  main {
    background-color: #f9f7f1;
  }

  button {
    background: #1fe7c3;
    position: relative;
  }

  button {
    width: 220px;
    height: 50px;
    border: none;
    outline: none;
    color: #fff;
    background: #111;
    cursor: pointer;
    position: relative;
    z-index: 0;
    border-radius: 10px;
  }

  button:before {
    content: "";
    background: linear-gradient(
      45deg,
      #ff0000,
      #ff7300,
      #fffb00,
      #48ff00,
      #00ffd5,
      #002bff,
      #7a00ff,
      #ff00c8,
      #ff0000
    );
    position: absolute;
    top: -2px;
    left: -2px;
    background-size: 400%;
    z-index: -1;
    filter: blur(5px);
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    animation: glowing 20s linear infinite;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    border-radius: 10px;
  }

  button:active {
    color: #fff;
  }

  button:active:after {
    /* background: transparent; */
    color: white;
  }

  button:hover:before {
    opacity: 1;
  }

  button:after {
    z-index: -1;
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #111;
    left: 0;
    top: 0;
    border-radius: 10px;
  }

  @keyframes glowing {
    0% {
      background-position: 0 0;
    }
    50% {
      background-position: 400% 0;
    }
    100% {
      background-position: 0 0;
    }
  }

  .inter {
    font-family: "Inter";
  }
</style>
