---
import { Image, Picture } from "@astrojs/image/components";
const projects = [
  {
    id: 1,
    title: "Athayog Living",
    content:
      "  Built the entire website architecture to help them increase their customer base & sell their courses",
    url: "https://athayogliving.com/",
    color: "green",
    image: "og.png",
  },
  {
    id: 2,
    title: " Royal Brothers",
    content:
      "   Revamped Website UI to a newer modern design for better customer retention with SEO boost",
    url: "https://www.royalbrothers.com/",
    color: "yellow",
    image: "royal.png",
  },
  {
    id: 3,
    title: "Rapid Store",
    content:
      "   A Full-Stack E-Commerce Shoe Store Built Using Commerce JS, Stripe, Chakra UI & NextJS",
    url: "https://rapid-store.vercel.app/",
    color: "pink",
    image: "store.svg",
  },
];
---

<section
  class="flex justify-center flex-col items-center py-10 md:py-16 lg:py-20 px-5"
  id="project-section"
>
  <div class="max-w-screen-2xl m-auto">
    <h2 class="text-2xl uppercase">My Projects</h2>
    <p class="font-bold mt-6 text-2xl md:text-3xl lg:text-4xl">
      Here are a few projects I've worked on
    </p>
    <div
      class="grid grid-cols-1 gap-10 mt-10 md:mt-20 lg:mt-28 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        projects.map((project) => {
          return (
            <div class="w-full">
              <p class="text-md font-semibold mb-2 flex items-center gap-2">
                <span
                  class={`h-2 w-2 inline-block rounded-full bg-green-300`}
                />{" "}
                {project.title}
              </p>

              <div class="bg-white shadow-md p-6 rounded-md h-52 flex flex-col gap-5 justify-around">
                <div class="w-full flex justify-center items-start gap-5">
                  <img
                    src={ project.image}
                    alt=""
                    class="w-24 p-2 rounded-md"
                    width="100%"
                    height="100%"
                  />
                  <p class="">{project.content}</p>
                </div>
                <a href={project.url} target="_blank" rel="noopener">
                  <button
                    class={`bg-black text-white px-5 py-2 rounded-md  hover:shadow-xl transition-shadow `}
                  >
                    View Website
                  </button>
                </a>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  section {
    background: rgb(238, 174, 202);
    background: radial-gradient(
      circle,
      rgba(238, 174, 202, 1) 0%,
      rgba(148, 187, 233, 1) 100%
    );
  }
</style>
